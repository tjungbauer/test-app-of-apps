apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: waves-loki-dependencies
  namespace: openshift-gitops
  annotations:
    argocd.argoproj.io/sync-wave: "0"
spec:
  destination:
    name: in-cluster
    namespace: default
  info:
    - name: Description
      value: Waves of applications that are dependent on LokiStack, such as openshift-logging or NetObserv Operator
  project: in-cluster
  source:
    path: loki-dependency-waves/gitops/managed-gitops-apps
    repoURL: 'https://github.com/tjungbauer/test-app-of-apps'
    targetRevision: main
  syncPolicy:
    syncOptions:
      - ApplyOutOfSyncOnly=true